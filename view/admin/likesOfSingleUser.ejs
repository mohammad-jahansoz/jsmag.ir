<%- include('../includes/header') -%>
<%- include('../includes/link') -%>
<%- include('../includes/meno') -%>
      <!-- start middle section -->
      <main>
        <div class="insights grid grid-cols-1 gap-7">
          <!-- total view -->
          <div class="post-main-top views gap-2 grid grid-cols-4">
            <div class="text-center">
              <span class="material-icons-sharp"> people </span>
              <div class="left">
                <h3>Total Users</h3>
                <h2>113</h2>
              </div>
            </div>
            <div class="text-center">
              <span class="material-icons-sharp"> chat </span>
              <div class="left">
                <h3>Total  Comments</h3>
                <h2>? comments</h2>
              </div>
            </div>
            <div class="text-center">
              <span class="material-icons-sharp"> chat </span>
              <div class="left">
                <h3>Total User Comments</h3>
                <h2>81</h2>
              </div>
            </div>
            <div class="text-center">
              <span class="material-icons-sharp"> favorite </span>
              <div class="left">
                <h3>Total Like</h3>
                <h2>517</h2>
              </div>
            </div>
          </div>
        </div>
        <!-- start posts section -->
        <div class="comments-section-single-user">
          <h1 class="khat">Recent Comments of <%= user.email %></h1>
          <ul class="comment-container-single-user">
            <% for(post of posts){ %>
              <li style="text-align: center;">
                <div class="image-container">
                  <img src="/<%= post.imageUrl %>" alt="express" class="" />
                  <a href="/blog/post/<%= commentWithPost.postId %>" target="_blank" >
                  <p
                    class="title-comments-section"
                  >
                  <%= post.title %>
                </p>
                  </a>
                </div>
                <div class="">
                  <p><%= post.date.toLocaleString('fa-IR-u-nu-latn') %></p>
                </div>
              </li>
              <% } %>
          </ul>
        </div>
      </main>
    </div>
      <%- include('../includes/end') -%>
