<%- include('../includes/header') -%>
<%- include('../includes/link-tinymce') -%>
<%- include('../includes/meno') -%>
      <!-- start middle section -->
      <main>
        
        <div class="add-post">
          <div class="khat">
            <h2>Add New Post</h2>
          </div>
          <div class="">
            <form
              action="/admin/add-post/images/posts"
              method="POST"
              class="add-post-container"
              enctype="multipart/form-data"
            >
              <input
                type="text"
                name="title"
                class="title"
                placeholder="title"
              />
              <input type="file" name="image"  accept="image/*" />
              <input
                type="text"
                name="description"
                class="description"
                placeholder="description"
                minlength="50"
                maxlength="300"
              />
              <div class="sac">
                <div class="text-input">
                  <p>Post Status?</p>
                  <input
                    type="radio"
                    name="status"
                    id="status_show"
                    value="show"
                    class="status"
                    checked
                  />
                  <label for="show">show</label>
                  <input
                    type="radio"
                    name="status"
                    id="status_hidden"
                    value="hidden"
                  />
                  <label for="hidden">hidden</label>
                </div>
                <div class="text-input">
                  <p>Author?</p>
                  <select name="author" id="author" class="author" name="author">
                    <label for="author">author</label>
                    <option value="Mohammad jahansoz">Mohammad Jahansoz</option>
                  </select>
                </div>
                <div class="text-input">
                  <p>Category?</p>
                  <select name="category" id="category" class="category">
                    <option value="javascript">JavaScript</option>
                    <option value="node.js&express.js">Node.js & Express.js</option>
                    <option value="mongoDb&mongoose">MongoDB & Mongoose</option>
                    <option value="mySql">MySQL</option>
                    <option value="webTechnologies">Web Technologies</option>
                    <option value="ProgrammingExperience">Programming Experience</option>
                  </select>
                </div>
              </div>
              <input
                type="text"
                name="tags"
                id="tags"
                placeholder="tags should space with , "
                class="tags"
              />
              <div class="tinymce-placeholer">
                <textarea id="textarea" class="textarea" rows="38" name="post">
                  just do it...
                </textarea>
              </div>
              <button type="submit" class="post-upload-btn">Upload Post</button>
            </form>
          </div>
        </div>
      </main>
    </div>

      <%- include('../includes/end') -%>
